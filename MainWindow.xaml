        <Button x:Name="btnDeleteArtist" Content="Delete" HorizontalAlignment="Left" Height="27" Margin="280,236,0,0" VerticalAlignment="Top" Width="59" Click="btnDeleteArtist_Click"/>
        <Button x:Name="btnSaveNewArtist" Content="Save New" HorizontalAlignment="Left" Height="27" Margin="368,236,0,0" VerticalAlignment="Top" Width="59" Click="btnSaveNewArtist_Click"/>
