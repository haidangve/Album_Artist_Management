        <Label Content="ArtistID" HorizontalAlignment="Left" Margin="35,84,0,0" VerticalAlignment="Top" Width="78" FontWeight="Bold"/>
        <Label Content="Artist Name" HorizontalAlignment="Left" Margin="167,84,0,0" VerticalAlignment="Top" Width="86" FontWeight="Bold"/>
        <Label Content="Billboard Rank" HorizontalAlignment="Left" Margin="521,84,0,0" VerticalAlignment="Top" Width="94" FontWeight="Bold"/>
