        <Label Content="Artist Form" HorizontalAlignment="Left" Margin="35,231,0,0" VerticalAlignment="Top" Width="135" FontWeight="Bold" FontSize="20" Height="32"/>
        <Label Content="Album Form" HorizontalAlignment="Left" Margin="35,583,0,0" VerticalAlignment="Top" Width="135" FontWeight="Bold" FontSize="20"/>
        <TextBox x:Name="txtArtistID" HorizontalAlignment="Left" Height="26" Margin="35,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78" IsReadOnly="True"/>
        <TextBox x:Name="txtArtistName" HorizontalAlignment="Left" Height="26" Margin="167,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="285"/>
        <TextBox x:Name="txtBillboardRank" HorizontalAlignment="Left" Height="26" Margin="521,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94"/>
