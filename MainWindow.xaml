        <Label Content="Release Date" HorizontalAlignment="Left" Margin="537,625,0,0" VerticalAlignment="Top" Width="83" FontWeight="Bold"/>
        <Label Content="Album Name" HorizontalAlignment="Left" Margin="191,625,0,0" VerticalAlignment="Top" Width="219" FontWeight="Bold"/>
